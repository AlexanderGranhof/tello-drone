{
    "extends": [
        "airbnb-base",
        "plugin:mocha/recommended"
    ],
    "plugins": [
        "mocha"
    ],
    "env": {
        "mocha": true
    },
    "overrides": [{
        "files": ["test/*.js"],
        "rules": {
            "func-names": "off",
            "object-curly-newline": "off",
            "max-len": "off",
            "prefer-arrow-callback": 0,
            "mocha/prefer-arrow-callback": 2,
            "quotes": ["error", "double"],
            "indent": ["error", 4]
        }
    },
    {
        "files": ["lib/**/*.js"],
        "rules": {
            "quotes": ["error", "double"],
            "indent": ["error", 4],
            "arrow-parens": "off",
            "no-restricted-syntax": [ "off", "ForOfStatement" ],
            "consistent-return": "off",
            "max-len": ["error", 150],
            "no-ternary": "off"
        }
    }]
}